<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gwsd.open_ptt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />

    <application
        android:name="com.gwsd.open_ptt.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_log_gw_desktop"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_log_gw_desktop"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/GWApp.Them" >

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.gwsd.open_ptt.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.gwsd.open_ptt.activity.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.gwsd.open_ptt.activity.LoginActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.MainActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.VideoCallActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.ChatListActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.ChatActivity"/>
<!--        <activity android:name=".activity.OtherActivity"/>-->

        <activity android:name="com.gwsd.open_ptt.video_ui.video_record.VideoRecordActivity"/>
        <activity android:name="com.gwsd.open_ptt.video_ui.video_record.PlayVideoActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.MemberListActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.PttCallActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.GroupDetailActivity"/>
        <activity android:name="com.gwsd.open_ptt.activity.AudioCallActivity"/>

        <service android:name="com.gwsd.open_ptt.service.MainService"/>
        <service android:name="com.gwsd.open_ptt.service.FileSendService"/>
        <receiver android:name="com.gwsd.open_ptt.broadcast.KeyReceiver"
            android:exported="true">

        </receiver>
    </application>

</manifest>