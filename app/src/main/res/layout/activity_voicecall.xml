<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_black">

    <RelativeLayout
        android:id="@+id/viewBtnContentTopItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/color_transparent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_boundary_s"
        android:paddingRight="@dimen/dimen_boundary_s"
        android:paddingTop="@dimen/dimen30dp">

        <TextView
            android:id="@+id/viewAudioCallNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="13312345678"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/textSize_nroml" />

        <TextView
            android:id="@+id/viewAudioCallTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/viewAudioCallNm"
            android:layout_marginTop="@dimen/dimen_boundary_s"
            android:layout_marginBottom="@dimen/dimen_boundary"
            android:text="00:00"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/textSize_samll" />

    </RelativeLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/viewAudioMuteLocal"
            android:layout_width="@dimen/item_height_x"
            android:layout_height="@dimen/item_height_x"
            android:padding="@dimen/dimen5dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:src="@drawable/selector_btn_mic" />

        <ImageView
            android:id="@+id/viewAudioHandFree"
            android:layout_width="@dimen/item_height_x"
            android:layout_height="@dimen/item_height_x"
            android:layout_marginLeft="@dimen/dimen20dp"
            android:padding="@dimen/dimen5dp"
            android:src="@drawable/selector_btn_spk"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/video_hangup_item_bottm"
        android:layout_marginLeft="@dimen/video_hangup_item_marLeft"
        android:layout_marginRight="@dimen/video_hangup_item_marLeft"
        android:gravity="center">
        <ImageView
            android:id="@+id/viewAudioHangup"
            android:layout_height="@dimen/video_hangup_size"
            android:layout_width="@dimen/video_hangup_size"
            android:layout_marginLeft="@dimen/dimen5dp"
            android:src="@drawable/selector_video_hangup"/>
        <ImageView
            android:id="@+id/viewAudioAccept"
            android:layout_height="@dimen/video_hangup_size"
            android:layout_width="@dimen/video_hangup_size"
            android:layout_marginLeft="@dimen/dimen30dp"
            android:src="@drawable/selector_video_accept"/>
    </LinearLayout>

</LinearLayout>