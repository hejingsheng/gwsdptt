<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/IMChatItemBg"
    >
    <ImageView
        android:id="@+id/viewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/user"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/viewHead"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/textSize_nroml"
        android:text=""
        />
    <!--chat_left_word_bubble-->
    <com.gwsd.open_ptt.view.ChatFromPhotoView
        android:id="@+id/viewFromMsgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/viewHead"
        android:layout_below="@+id/viewName"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen80dp"
        >
        <ImageView
            android:id="@+id/viewPhoto"
            style="@style/IMChatBubbleImageView"

            />
    </com.gwsd.open_ptt.view.ChatFromPhotoView>
</RelativeLayout>