<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/IMChatItemBg"
    >
    <ImageView
        android:id="@+id/viewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/user"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/viewHead"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/textSize_nroml"
        android:text=""
        />
    <!-- android:background="@drawable/chat_left_word_bubble"-->
    <com.gwsd.ptt.ui.view.ChatFromVideoView
        android:id="@+id/viewFromMsgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/viewHead"
        android:layout_below="@+id/viewName"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen80dp"
        >
        <ImageView
            android:id="@+id/viewVideoThumb"
            style="@style/IMChatBubbleImageView"
            />
        <ImageView
            android:id="@+id/viewVideoFlag"
            android:layout_width="@dimen/dimen35dp"
            android:layout_height="@dimen/dimen35dp"
            android:src="@mipmap/ic_record_play"
            android:layout_centerInParent="true"
            />
    </com.gwsd.ptt.ui.view.ChatFromVideoView>
</RelativeLayout>