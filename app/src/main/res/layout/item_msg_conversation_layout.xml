<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen70dp"
    android:background="?attr/t_listItemColor"
    android:id="@+id/viewRoot"
    android:orientation="horizontal"
    >
    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/colorLine2"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/viewItemLeftGrp"
        android:layout_width="@dimen/item_height"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewLine"
        >
        <ImageView
            android:id="@+id/viewIVHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_member_offline"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/viewItemRightGrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_boundary"

        >
        <TextView
            android:id="@+id/viewLastMsgTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_samllS"
            android:textColor="@color/textColorHint"
            android:layout_alignParentRight="true"
            android:text="2002-02-02 15:15"
            />
        <TextView
            android:id="@+id/viewChatMsgRemind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen5dp"
            android:background="@drawable/selector_radius_redk"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_samllS"
            android:paddingLeft="@dimen/dimen5dp"
            android:paddingRight="@dimen/dimen5dp"
            android:paddingTop="@dimen/dimen2dp"
            android:paddingBottom="@dimen/dimen2dp"
            android:text="99+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/viewItemLeftGrp"
        android:layout_toLeftOf="@+id/viewItemRightGrp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_boundary_s"
        >
        <TextView
            android:id="@+id/viewDescName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_nroml"
            android:textColor="@color/textColorBlack"
            android:lines="1"
            android:ellipsize="end"
            android:text=""
            />
        <TextView
            android:id="@+id/viewLastMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/textSize_samll"
            android:textColor="@color/textColorHint"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            />
    </LinearLayout>

</RelativeLayout>