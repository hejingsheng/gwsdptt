<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/tab_imgview"
        android:layout_width="@dimen/dimen25dp"
        android:layout_height="@dimen/dimen25dp"
        android:src="@mipmap/ic_main_tab_map_n"
        android:layout_centerHorizontal="true"
        />

    <com.gwsd.ptt.view.LanguageTextView
        android:id="@+id/tab_tv"
        style="@style/mainRadioBtn"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_imgview"
        android:gravity="center"
        android:textColor="?attr/t_txColor"
        android:text="123456789" />
    <ImageView
        android:id="@+id/view_msg_red"
        android:layout_width="@dimen/dimen10dp"
        android:layout_height="@dimen/dimen10dp"
        android:background="@drawable/selector_oval_red"
        android:layout_toRightOf="@+id/tab_imgview"
        android:layout_marginLeft="-5dp"
        />
</RelativeLayout>