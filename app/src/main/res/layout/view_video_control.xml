<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_transparent"
    android:id="@+id/viewBtnContentRoot"
    >

    <RelativeLayout
        android:id="@+id/viewBtnContentTopItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_top_hright"
        android:layout_alignParentLeft="true"
        android:background="@color/color_transparent20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_boundary_s"
        android:paddingRight="@dimen/dimen_boundary_s"
        android:paddingTop="@dimen/dimen_boundary_s">

        <TextView
            android:id="@+id/viewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/textSize_samll" />

        <TextView
            android:id="@+id/viewVideoState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewTimer"
            android:layout_marginTop="@dimen/dimen10dp"
            android:text="@string/hint_talkback_state_talkback_ing"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/textSize_samll" />

    </RelativeLayout>
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/viewBtnContentBottomItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/video_hangup_item_bottm"
        android:gravity="center">

        <ImageView
            style="@style/TextSuper"
            android:id="@+id/viewVideoMuteLocal"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:src="@drawable/selector_btn_mic"
            android:padding="@dimen/dimen5dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            />

        <ImageView
            android:id="@+id/viewVideoMuteRemote"
            style="@style/TextSuper"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:src="@drawable/selector_btn_spk"
            android:padding="@dimen/dimen5dp"
            />

        <ImageView
            android:id="@+id/viewVideoSwitchCamera"
            style="@style/TextSuper"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:src="@drawable/chatvideo_changecamera"/>

        <ImageView
            android:id="@+id/viewHangup"
            android:layout_width="@dimen/video_hangup_size"
            android:layout_height="@dimen/video_hangup_size"
            android:src="@drawable/selector_video_hangup"
            android:layout_marginLeft="@dimen/dimen5dp"
            />
        <ImageView
            android:id="@+id/viewAccept"
            android:layout_width="@dimen/video_hangup_size"
            android:layout_height="@dimen/video_hangup_size"
            android:src="@drawable/selector_video_accept"
            android:layout_marginLeft="@dimen/dimen5dp"
            />
    </LinearLayout>
</LinearLayout>